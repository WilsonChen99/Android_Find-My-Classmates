<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/rate_tab_bg"
    android:layout_marginBottom="20dp"
    >
    <TextView
        android:id="@+id/rate_score"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="0.2"
        android:text="@string/rate_tab_text_NA"
        android:textSize="30sp"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_weight="0.8"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/rate_tab_text_1st"
                android:textSize="18sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/rate_tab_attendance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:text="@string/rate_tab_text_NA"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/rate_tab_text_2nd"
                android:textSize="18sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/rate_tab_workload"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:text="@string/rate_tab_text_NA"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/rate_tab_text_3rd"
                android:textSize="18sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/rate_tab_latework"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"
                android:text="@string/rate_tab_text_NA"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/rate_tab_upvote"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="@string/rate_page_up_vote"
                android:gravity="center"
                android:textSize="14sp"
                />
            <Button
                android:id="@+id/rate_tab_downvote"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="@string/rate_page_down_vote"
                android:gravity="center"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/rate_tab_vote"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:textSize="20sp"
                android:gravity="center"
                android:text="@string/rate_tab_text_NA"
                />

        </LinearLayout>
        <Button
            android:id="@+id/rate_comment_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/rate_tab_bttn"
            android:textColor="@color/white"
            android:background="@drawable/btn_bg"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>

</LinearLayout>
